{
	"manifest_version": 2,
	"name": "Torn Tools",
	"version": "5.3.1",
	"description": "Tools for Torn users.",
	"icons": {
		"128": "images/icon128.png"
	},
	"browser_action": {
		"default_title": "TornTools",
		"default_popup": "views/popup/index.html",
		"default_icon": "images/icon128.png"
	},
	"author": "Gregor Kaljulaid - Mephiles[2087524]",
	"background": {
		"page": "background.html"
	},
	"permissions": [
		"management",
		"storage",
		"notifications",
		"background",
		"https://api.torn.com/*",
		"https://yata.alwaysdata.net/*",
		"https://www.tornstats.com/*",
		"https://torntools.gregork.com/*",
		"https://torn-proxy.com/*"
